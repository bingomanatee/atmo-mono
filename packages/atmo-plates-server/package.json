{
  "name": "@wonderlandlabs/atmo-plates-server",
  "version": "1.0.0",
  "description": "Server-specific plate simulation with Node.js worker support",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:clean && npm run build:js && npm run build:types",
    "build:clean": "rm -rf dist",
    "build:js": "vite build",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "plates",
    "simulation",
    "server",
    "nodejs",
    "workers",
    "h3",
    "typescript"
  ],
  "author": "Wonderland Labs",
  "license": "MIT",
  "dependencies": {
    "@wonderlandlabs/atmo-plates": "workspace:*",
    "@wonderlandlabs/atmo-workers-server": "workspace:*",
    "@wonderlandlabs/atmo-utils": "workspace:*",
    "@wonderlandlabs/multiverse": "workspace:*",
    "h3-js": "^4.1.0",
    "lodash-es": "^4.17.21",
    "rxjs": "^7.8.0",
    "three": "^0.170.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/lodash-es": "^4",
    "@types/node": "^20.0.0",
    "@types/three": "^0.170.0",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^3.1.3"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  }
}
